@model WebApplicationShopOnline.Models.Cart
@{
    ViewData["Title"] = "Корзина";
}

<div class="container mt-4">
    <h2>Корзина</h2>

    @if (Model.CartItems != null && Model.CartItems.Any())
    {
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Товар</th>
                        <th>Цена</th>
                        <th>Количество</th>
                        <th>Сумма</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>
                                <form asp-action="UpdateQuantity" method="post" class="form-inline">
                                    <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                    <div class="input-group" style="width: 150px;">
                                        <input type="number" name="quantity" value="@item.Quantity" 
                                               class="form-control" min="0" style="width: 70px" />
                                        <div class="input-group-append">
                                            <button type="submit" class="btn btn-outline-secondary">
                                                Обновить
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </td>
                            <td>@((item.Price * item.Quantity).ToString("C"))</td>
                            <td>
                                <form asp-action="RemoveItem" method="post" style="display: inline;">
                                    <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        Удалить
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-right"><strong>Итого:</strong></td>
                        <td>
                            <strong>
                                @Model.CartItems.Sum(item => item.Price * item.Quantity).ToString("C")
                            </strong>
                        </td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="mt-3">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                Продолжить покупки
            </a>
            <a href="#" class="btn btn-success">
                Оформить заказ
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Ваша корзина пуста. <a href="@Url.Action("Index", "Home")">Начните покупки</a>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('input[type=number]').on('change', function () {
                $(this).closest('form').submit();
            });
        });
    </script>
}
</div>
