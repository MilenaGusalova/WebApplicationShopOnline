@model IEnumerable<WebApplicationShopOnline.Models.User>

@{
    ViewData["Title"] = "Список пользователей";
}

<div class="container mt-4">
    <h2>Список пользователей</h2>

    <div class="row mb-4">
        <div class="col-md-6">
            <form method="get" action="@Url.Action("Index", "User")" class="form-inline">
                <div class="input-group">
                    <input type="text" name="searchName" class="form-control" placeholder="Поиск по имени...">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">Поиск</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-info">
            @ViewBag.Message
        </div>
    }

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>ID</th>
                        <th>Имя</th>
                        <th>Логин</th>
                        <th>Телефон</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.IdUser</td>
                            <td>@user.Name</td>
                            <td>@user.Login</td>
                            <td>@user.Telephone</td>
                            <td>@user.Email</td>
                            <td>
                                <a asp-action="UserDetails" asp-route-id="@user.IdUser" class="btn btn-info btn-sm">
                                    Подробнее
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div> 